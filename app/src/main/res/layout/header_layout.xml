<?xml version="1.0" encoding="utf-8"?>
<in.global.agro.decor.padding.PaddingAwareConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:paddingTop="30dp"
    android:paddingStart="10dp">

    <TextView
        android:singleLine="true"
        android:ellipsize="marquee"
        app:layout_constraintEnd_toStartOf="@id/header_image"
        android:layout_marginStart="5dp"
        android:marqueeRepeatLimit="marquee_forever"
        android:id="@+id/company_name"
        style="@style/textStyleBold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Company Name "
        android:textColor="@color/primaryTextColor"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/header_image" />

    <ImageView
        android:id="@+id/header_image"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@drawable/icon_one"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#DDDDDD" />


</in.global.agro.decor.padding.PaddingAwareConstraintLayout>